!!!
html
  head
    title= "Hot Pie - " + title
    link(rel='stylesheet', href='/stylesheets/#{stylesheet}.css')

  body
    #header
      h1= title
      
    if (message)
      if message.info
        p.flash(class='info')
          = message.info
      if message.error
        p.flash(class='error') 
          = message.error
        
    block content